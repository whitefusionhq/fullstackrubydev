{% rendercontent "bulmatown/navbar" %}
  {% with logo %}
    <a class="navbar-item" href="/">
      {% svg "/images/fullstack_ruby_logo.svg", class: "logo", aria-labelledby: "fullstack-ruby-logo-title" %}
    </a>
  {% endwith %}
  {% with items_start %}
    <a class="navbar-item" href="/">Home</a>
    <a class="navbar-item" href="/articles">Articles</a>
    <a class="navbar-item" href="/about">About</a>
    <div class="navbar-item has-dropdown is-hoverable">
      <a class="navbar-link" href="#">
        Topics
      </a>
      <div class="navbar-dropdown is-boxed">
        {% assign sorted_categories = categories | sort %}
        {% for category in sorted_categories %}
          <a class="navbar-item" href="/topics/{{ category[0] | slugify }}">
            {{ category[0] }}
          </a>
        {% endfor %}
      </div>
    </div>
  {% endwith %}

  {% with items_end %}
    <div class="navbar-item search-item">
      {% render "bridgetown_quick_search/search", placeholder: "Search", input_class: "input" %}
    </div>
    <a class="navbar-item is-hidden-desktop-only" href="https://ruby.social/@{{ metadata.mastodon }}" target="_blank">
      <span class="icon has-text-info-dark"><i class="fa fa-mastodon is-size-6"></i></span>
      <span class="is-hidden-tablet">Mastodon</span>
    </a>
  {% endwith %}
{% endrendercontent %}
